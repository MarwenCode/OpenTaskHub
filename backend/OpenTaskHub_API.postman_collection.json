							"raw": "{{base_url}}/workspaces",
							"host": ["{{base_url}}"],
							"path": ["workspaces"]
						},
						"description": "Create a new workspace (Admin only)"
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set(\"workspace_id\", response.workspace.id);",
									"}"
								]
							}
						}
					]
				},
				{
					"name": "Update Workspace",
					"request": {
						"method": "PUT",
							"header": [
								{
									"key": "x-user-id",
									"value": "{{admin_user_id}}"
								},
								{
									"key": "x-user-email",
									"value": "{{admin_user_email}}"
								},
								{
									"key": "x-user-role",
									"value": "admin"
								},
								{
									"key": "Content-Type",
									"value": "application/json"
								}
							],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Updated Workspace Name\",\n  \"description\": \"Updated description\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/workspaces/{{workspace_id}}",
							"host": ["{{base_url}}"],
							"path": ["workspaces", "{{workspace_id}}"]
						},
						"description": "Update workspace (Admin only)"
					}
				},
				{
					"name": "Delete Workspace",
					"request": {
						"method": "DELETE",
							"header": [
								{
									"key": "x-user-id",
									"value": "{{admin_user_id}}"
								},
								{
									"key": "x-user-email",
									"value": "{{admin_user_email}}"
								},
								{
									"key": "x-user-role",
									"value": "admin"
								}
							],
						"url": {
							"raw": "{{base_url}}/workspaces/{{workspace_id}}",
							"host": ["{{base_url}}"],
							"path": ["workspaces", "{{workspace_id}}"]
						},
						"description": "Delete workspace (Admin only)"
					}
				}
			]
		},
